<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parkhanee.mytravelapp.LogInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Log In"
        android:id="@+id/textView9"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/pasword"
        android:layout_alignStart="@+id/pasword"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/pasword"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:id="@+id/textView12"
        android:layout_toLeftOf="@+id/id"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PWD"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/pasword"
        android:layout_toLeftOf="@+id/pasword"
        android:layout_toStartOf="@+id/pasword"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="로그인"
        android:id="@+id/okay"
        android:layout_below="@+id/pasword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="회원가입"
        android:id="@+id/signin"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/fragment"
        android:background="#00ffffff"/>

    <fragment
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:name="com.example.parkhanee.mytravelapp.FbLoginFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_fb_login"
        android:layout_below="@+id/okay"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
