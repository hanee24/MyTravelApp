<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parkhanee.mytravelapp.NearbyD1Activity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="주변 탐색"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/mainbutton_nearby"
        android:layout_marginBottom="60dp"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="54dp"
        android:entries="@array/distance_array_list"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:entries="@array/cat_array_list"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/default_button_style"
        android:textColor="@color/colorFontPrimary"/>
</LinearLayout>
