<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_folderitem"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        android:id="@+id/folder_desc"
        android:layout_below="@+id/folder_name"
        android:layout_alignLeft="@+id/folder_name"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.09.02 ~ 16.09.08"
        android:id="@+id/textView19"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginBottom="5dp"/>

    <!--android:layout_toLeftOf="@+id/imageButton7"-->
    <!--android:layout_alignBottom="@+id/imageButton7"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="user"
        android:id="@+id/textView45"
        android:layout_toRightOf="@+id/textView49"
        android:layout_toEndOf="@+id/textView49"
        android:layout_alignTop="@+id/textView49"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : "
        android:id="@+id/textView49"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="state"
        android:id="@+id/tvShareState"
        android:layout_alignBaseline="@+id/textView45"
        android:layout_alignBottom="@+id/textView45"
        android:layout_toLeftOf="@+id/toggle"
        android:layout_toStartOf="@+id/toggle"
        android:layout_marginEnd="5dp"/>

    <ImageView
        app:srcCompat="@drawable/toogle_on"
        android:id="@+id/toggle"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/tvShareState"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="폴더 제목"
        android:id="@+id/folder_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorFontPrimary"
        android:textStyle="bold"
        android:layout_alignStart="@+id/textView49"
        android:layout_below="@+id/textView49"
        android:layout_marginTop="3dp"/>


</RelativeLayout>