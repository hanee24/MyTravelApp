        android:layout_height="wrap_content"
        android:text="폴더 제목"
        android:id="@+id/folder_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:textColor="@color/colorFontPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/textView49"
        android:layout_alignLeft="@+id/textView49"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        android:id="@+id/folder_desc"
        android:layout_below="@+id/folder_name"
        android:layout_alignLeft="@+id/folder_name"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.09.02 ~ 16.09.08"
        android:id="@+id/textView19"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/folder_desc"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

