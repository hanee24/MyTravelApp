<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="폴더 제목"
        android:id="@+id/folder_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/theme_color"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        android:id="@+id/folder_desc"
        android:layout_below="@+id/folder_name"
        android:layout_alignLeft="@+id/folder_name"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.09.02 ~ 16.09.08"
        android:id="@+id/textView19"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/folder_desc"
        android:layout_alignLeft="@+id/folder_name"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="state"
        android:id="@+id/tvShareState"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_alignBottom="@+id/textView19"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="user"
        android:id="@+id/textView45"
        android:layout_alignBaseline="@+id/folder_name"
        android:layout_alignBottom="@+id/folder_name"
        android:layout_toRightOf="@+id/folder_name"
        android:layout_toEndOf="@+id/folder_name"/>

</RelativeLayout>