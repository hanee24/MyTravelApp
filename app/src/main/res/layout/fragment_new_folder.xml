<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:id="@+id/textView21"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:layout_below="@+id/textView23"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignTop="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginRight="25dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        android:id="@+id/textView22"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_toRightOf="@+id/textView22"
        android:layout_alignTop="@+id/textView22"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="새로운 여행폴더 만들기"
        android:id="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="여행 시작 날짜"
        android:id="@+id/textView24"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="여행 종료 날짜"
        android:id="@+id/textView27"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/date_start"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_start"
        android:layout_toLeftOf="@+id/pick_start_date"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_alignTop="@+id/textView24"
        android:layout_toRightOf="@+id/textView24"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="2016 - 09 - 09"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pick_start_date"
        android:layout_alignBottom="@+id/date_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:src="@drawable/calendar"
        android:scaleType="fitXY"
        android:background="#00ffffff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_end"
        android:layout_toLeftOf="@+id/pick_start_date"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_alignTop="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="2016 - 09 - 09"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pick_end_date"
        android:layout_alignBottom="@+id/date_end"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:src="@drawable/calendar"
        android:scaleType="fitXY"
        android:background="#00ffffff"/>

</RelativeLayout>